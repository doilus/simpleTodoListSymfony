{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        {% if app.user %}
            <h1> To do list </h1>
            {% if taskSoon is not empty %}
                <div class="reminder">
            <h2> Reminders: </h2>
                <table>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                    </tr>
                {% for task in taskSoon %}
                    <tr>
                        <td> {{ task.name }}</td>
                        <td> {{ task.dueDate|date('Y-m-d') }}</td>
                    </tr>
                {% endfor %}
                </table>
                </div>
            {% endif %}

            <table class="taskTable">
                <tr>
                    <th> Name </th>
                    <th> Due Date </th>
                    <th> Date Status </th>
                    <th> Status </th>
                    <th> Options </th>
                </tr>
            {% for task in tasks %}
                <tr>
                    <td> {{ task.name }}</td>
                    <td> {{ task.dueDate|date('Y-m-d') }}</td>
                    {% if task.dueDate < dateNow %}
                        <td> Outdated </td>
                    {% else %}
                        <td> Current </td>
                    {% endif %}
                    {% if  task.isDone  != 0 %}
                        <td>
                            <span class="fa fa-check-square" style="color:greenyellow"></span>
                        </td>
                    {% else %}
                        <td>
                        <span class="fa fa-check-square" style="color:red"></span>
                        </td>
                    {% endif %}
                    <td>
                        <div class="options">
                            <a style="text-decoration: none" href="{{ path('app_edit_task', { id: task.id }) }}">
                                <span class="fa fa-pencil-alt"></span>
                            </a>
                            <a style="text-decoration: none" href="{{ path('app_delete_task', { id: task.id }) }}">
                                <span class="fa fa-trash"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </table>
            <form class="buttonAdd"action="{{ path('app_add_task' ) }}" >
                <button class="add-task">Add new task</button>
            </form>
        {% endif %}
    </div>
    </div >
{% endblock %}